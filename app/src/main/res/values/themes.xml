<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/whitee</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/whitee</item>
        <item name="colorSecondaryVariant">@color/whitee</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>
    </style>

    <style name="MyTheme" parent="Theme.MyApplication">

        <item name="android:statusBarColor">#797E7E7E</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>
    </style>


</resources>